<!doctype html>
<html lang="en">
{{>Header}}

<body>
    {{>Navbar}}
    <main id="site-main">

     
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All Images</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">New Images</h2>
                <span class="text-dark">Use the below form to create a new Images Section</span>
            </div>

            <!-- add user form -->
            <form action="/images/new" method="POST" id="add_user" onsubmit="myfunction()" enctype="multipart/form-data">
                <div class="new_image">
                    <div class="form-group">
                        <label for="name" class="text-dark">Image Name</label>
                     
                        <input type="text" name="name" value="" placeholder="Animal Image" required>
                    </div>
                    <div class="form-group">
                        <label for="desc" class="text-dark">Image Description</label>
                        <textarea  name="desc" value="" placeholder="Description" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="image" class="text-dark">Upload Image</label>
                        <input type="file" name="image" id="image" required>
                    </div>
                  
                    </div>



                    <div class="form-group">
                        <button type="submit" class="btn btn-primary update">Save</button>
                    </div>

                </div>
            </form>

        </div>
    </main>


    <script src="js/main.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>

</html>