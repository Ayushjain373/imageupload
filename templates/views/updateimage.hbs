<!doctype html>
<html lang="en">
{{>Header}}

<body>
    {{>Navbar}}


    <main id="site-main">
        <div class="container">
            {{!-- {{#if msg}}
            <div class="alert alert-success alert-dismissible fade show " role="alert">
                {{msg}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
            </div>
            {{/if}} --}}

            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All Images</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Data</h2>
                <span class="text-dark">Use the below form to Update Data</span>
            </div>

            <!-- add user form -->
            {{#each data}}
            <form action="images/edit/{{this._id}}?_method=PUT" method="POST" id="update_user" enctype="multipart/form-data">
                <div class="new_image">
                    <div class="form-group">
                        <label for="name" class="text-dark">Image name</label>
                        <input type="hidden" name="id" value="">
                        <input type="text" name="name" value="{{this.Imagename}}" placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-dark">Description</label>
                        <textarea name="desc" value="" placeholder="example@gmail.com">{{this.desc}}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="image" class="text-dark">Upload Image</label>
                        <input type="file" name="image" id="image">
                    </div>





                    <div class="form-group">
                        <button type="submit" class="btn btn-primary update">Save</button>
                    </div>

                </div>
            </form>
            {{/each}}

        </div>
    </main>


    <script src="js/main.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>

</html>